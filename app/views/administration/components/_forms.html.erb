<h2 class="font-bold">FORM</h2>
<div class="mb-10">
  <div class="rounded-2xl border border-gray-200 p-4 mb-3">
    <form>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
        <input type="text" placeholder="First name" class="border p-2 rounded-xl w-full">
        <input type="text" placeholder="Last name" class="border p-2 rounded-xl w-full">
      </div>
      <div class="mb-4">
        <input type="email" placeholder="Email address" class="border p-2 rounded-xl w-full">
      </div>
      <div class="mb-4">
        <label class="text-gray-700" for="country_select">Select a country</label>
        <select id="country_select" class="border p-2 rounded-xl w-full">
          <option>United States</option>
        </select>
      </div>
      <div class="mb-4">
        <input type="text" placeholder="Street address" class="border p-2 rounded-xl w-full">
      </div>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
        <input type="text" placeholder="City" class="border p-2 rounded-xl w-full">
        <input type="text" placeholder="State / Province" class="border p-2 rounded-xl w-full">
        <input type="text" placeholder="ZIP / Postal code" class="border p-2 rounded-xl w-full">
      </div>
      <textarea id="chat" rows="3"
        class="block p-2 mb-6 w-full text-gray-900 rounded-xl border border-gray-300"
        placeholder="Your message..."></textarea>
      <button type="button" class="px-3 md:px-4 py-1 md:py-2 bg-indigo-600 text-white rounded-xl hover:bg-indigo-800">Submit</button>
    </form>
  </div>
</div>
