<%= form_with url: searches_results_path(locale), method: :get, local: true, data: {turbo: "false"}, class: "space-y-4" do |f| %>
  <div class="grid grid-cols-2 gap-4">
    <div>
      <%= f.label :language_id, "Language", class: "block text-sm font-medium text-gray-700" %>
      <%= select_tag("training_session[language_id]", options_for_select(Language.all.map { [_1.name, _1.id] }, params.dig(:training_session, :language_id)),
                     multiple: false, class: "border p-2 rounded-xl w-full", prompt: "All languages") %>
    </div>
    <div>
      <%= f.label :country_id, "Country", class: "block text-sm font-medium text-gray-700" %>
      <%= select_tag("training_session[country_id]", options_for_select(Country.all.map { [_1.name, _1.id] }, params.dig(:training_session, :country_id)),
                     multiple: false, class: "border p-2 rounded-xl w-full", prompt: "All countries") %>
    </div>
    <div>
      <%= f.label :category_id, "Category", class: "block text-sm font-medium text-gray-700" %>
      <%= select_tag("training_session[category_id]", options_for_select(TrainingSession::Category.all.map { [_1.identifier, _1.id] }, params.dig(:training_session, :category_id)),
                     multiple: false, class: "border p-2 rounded-xl w-full", prompt: "All categories") %>
    </div>
    <div>
      <%= f.label :fresk_id, "Fresk", class: "block text-sm font-medium text-gray-700" %>
      <%= select_tag("training_session[fresk_id]", options_for_select(Fresk.all.map { [_1.name, _1.id] }, params.dig(:training_session, :fresk_id)),
                     multiple: false, class: "border p-2 rounded-xl w-full", prompt: "All fresks") %>
    </div>
    <div>
      <%= f.label :start_at, "Start Date", class: "block text-sm font-medium text-gray-700" %>
      <%= f.date_field "training_session[start_at]", value: params.dig(:training_session, :start_at), class: "border p-2 rounded-xl w-full" %>
    </div>
    <div>
      <%= f.label :end_at, "End Date", class: "block text-sm font-medium text-gray-700" %>
      <%= f.date_field "training_session[end_at]", value:params.dig(:training_session, :end_at), class: "border p-2 rounded-xl w-full" %>
    </div>
  </div>

  <!-- Roles -->
  <div class="mt-4">
    <%= f.label :role, "Filter by Role", class: "block text-sm font-medium text-gray-700" %>
    <div class="mt-2 space-y-2">
      <div class="flex items-center">
        <%= f.radio_button "training_session[role]", "all", checked: (params.dig(:training_session, :role) == "all" || params.dig(:training_session, :role).blank?), class: "focus:ring-indigo-500 h-4 w-4 text-indigo-600 border-gray-300" %>
        <label for="training_session[role]_all" class="ml-3 block text-sm font-medium text-gray-700">All roles</label>
      </div>
      <div class="flex items-center">
        <%= f.radio_button "training_session[role]", "editor", checked: params.dig(:training_session, :role) == "editor", class: "focus:ring-indigo-500 h-4 w-4 text-indigo-600 border-gray-300" %>
        <label for="training_session[role]_editor" class="ml-3 block text-sm font-medium text-gray-700">Editor</label>
      </div>
      <div class="flex items-center">
        <%= f.radio_button "training_session[role]", "facilitator", checked: params.dig(:training_session, :role) == "facilitator", class: "focus:ring-indigo-500 h-4 w-4 text-indigo-600 border-gray-300" %>
        <label for="training_session[role]_facilitator" class="ml-3 block text-sm font-medium text-gray-700">Facilitator</label>
      </div>
      <div class="flex items-center">
        <%= f.radio_button "training_session[role]", "participant", checked: params.dig(:training_session, :role) == "participant", class: "focus:ring-indigo-500 h-4 w-4 text-indigo-600 border-gray-300" %>
        <label for="training_session[role]_participant" class="ml-3 block text-sm font-medium text-gray-700">Participant</label>
      </div>
    </div>
  </div>

  <div class="flex justify-end space-x-4">
    <%= f.submit "Filter", class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-xl text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    <%= link_to("Reset filters", training_sessions_path, class: "px-3 md:px-4 py-1 md:py-2 bg-gray-200 text-dark rounded-xl hover:bg-gray-300") %>
  </div>
<% end %>
