<%= form_with url: searches_results_path(locale), method: :get, local: true, data: {turbo: "false"}, class: "space-y-4" do |f| %>
  <%= hidden_field_tag :model, "training_session" %>
  <div class="grid grid-cols-2 gap-4">
    <div>
      <%= f.label :language_id, t("activerecord.models.language"), class: "block text-sm font-medium text-gray-700" %>
      <%= select_tag(:language_id, options_for_select(Language.all.map { [_1.name, _1.id] }, params[:language_id]),
                     multiple: false, class: "border p-2 rounded-xl w-full", prompt: "All languages") %>
    </div>
    <div>
      <%= f.label :country_id, t("activerecord.models.country"), class: "block text-sm font-medium text-gray-700" %>
      <%= select_tag(:country_id, options_for_select(Country.all.map { [_1.name, _1.id] }, params[:country_id]),
                     multiple: false, class: "border p-2 rounded-xl w-full", prompt: "All countries") %>
    </div>
    <div>
      <%= f.label :category_id,  t("activerecord.models.training_session_category"), class: "block text-sm font-medium text-gray-700" %>
      <%= select_tag(:category_id, options_for_select(TrainingSession::Category.all.map { [_1.identifier, _1.id] }, params[:category_id]),
                     multiple: false, class: "border p-2 rounded-xl w-full", prompt: "All categories") %>
    </div>
    <div>
      <%= f.label :fresk_id, t("activerecord.models.fresk"), class: "block text-sm font-medium text-gray-700" %>
      <%= select_tag(:fresk_id, options_for_select(Fresk.all.map { [_1.name, _1.id] }, params[:fresk_id]),
                     multiple: false, class: "border p-2 rounded-xl w-full", prompt: "All fresks") %>
    </div>
    <div>
      <%= f.label :start_at, t("activerecord.attributes.training_session.start_at"), class: "block text-sm font-medium text-gray-700" %>
      <%= f.date_field :start_at, value: params[:start_at], class: "border p-2 rounded-xl w-full" %>
    </div>
    <div>
      <%= f.label :end_at, t("activerecord.attributes.training_session.end_at"), class: "block text-sm font-medium text-gray-700" %>
      <%= f.date_field :end_at, value: params[:end_at], class: "border p-2 rounded-xl w-full" %>
    </div>
  </div>

  <!-- Roles -->
  <div class="mt-4">
    <%= f.label :role, t("training_session.role.role"), class: "block text-sm font-medium text-gray-700" %>
    <div class="grid grid-cols-2 md:grid-cols-4 gap-2 mt-2 p-2 border rounded-xl">
      <div>
        <%= f.radio_button :role, "all", checked: params[:role] == "all" || params[:role].blank?, class: "peer hidden" %>
        <label for="role_all" class="block cursor-pointer select-none rounded-xl px-2 py-1 text-center peer-checked:bg-indigo-500 peer-checked:text-white"><%= t("training_session.role.all") %></label>
      </div>
      <div>
        <%= f.radio_button :role, "editor", checked: params[:role] == "editor", class: "peer hidden" %>
        <label for="role_editor" class="block cursor-pointer select-none rounded-xl px-2 py-1 text-center peer-checked:bg-indigo-500 peer-checked:text-white"><%= t("training_session.role.editor") %></label>
      </div>
      <div>
        <%= f.radio_button :role, "facilitator", checked: params[:role] == "facilitator", class: "peer hidden" %>
        <label for="role_facilitator" class="block cursor-pointer select-none rounded-xl px-2 py-1 text-center peer-checked:bg-indigo-500 peer-checked:text-white"><%= t("training_session.role.facilitator") %></label>
      </div>
      <div>
        <%= f.radio_button :role, "participant", checked: params[:role] == "participant", class: "peer hidden" %>
        <label for="role_participant" class="block cursor-pointer select-none rounded-xl px-2 py-1 text-center peer-checked:bg-indigo-500 peer-checked:text-white"><%= t("training_session.role.participant") %></label>
      </div>
    </div>
  </div>

  <div class="flex justify-end space-x-4">
    <%= f.submit "Filter", class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-xl text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    <%= link_to("Reset filters", training_sessions_path, class: "px-3 md:px-4 py-1 md:py-2 bg-gray-200 text-dark rounded-xl hover:bg-gray-300") %>
  </div>
<% end %>
