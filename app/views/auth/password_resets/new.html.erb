<h1 class="mb-10"><%= t("auth.password_reset") %></h1>

<%= form_with(model: @user, url: auth_password_reset_path) do |form| %>
  <div class="mb-4">
    <%= form.label :email, class: "block text-gray-700 font-bold mb-2", for: :email %>
    <%= form.email_field :email, class: "appearance-none border rounded-xl w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>
  <div class="mb-4">
    <%= form.submit t("default.send"), class: "bg-indigo-500 hover:bg-indigo-700 text-white font-bold py-2 px-4 rounded-xl focus:outline-none focus:shadow-outline" %>
  </div>
<% end %>
