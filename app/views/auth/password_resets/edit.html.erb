<div class="w-full max-w-lg mx-auto">
  <h1><%= t("common.welcome_to", app_name: t("common.app_name")) %></h1>

  <h2 class="mt-10 mb-5"><%= t("auth.password_reset") %></h2>

  <%= form_with(model: @user, url: auth_password_reset_path(token: params[:token]), data: {controller: "password-strength"}) do |form| %>
    <%= render(Form::ErrorMessagesComponent.new(object: form.object)) %>

    <div>
      <%= render(Form::LabelComponent.new(form:, label: :password, value: t("auth.password"), for_input: :password)) %>
      <%= form.password_field(:password, data: {password_strength_target: :password}, class: "mb-10 appearance-none border rounded-xl w-full py-4 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline") %>
    </div>
    <div>
      <%= render(Form::LabelComponent.new(form:, label: :password_confirmation, value: t("auth.password_confirmation"), for_input: :password_confirmation)) %>
      <%= form.password_field(:password_confirmation, class: "mb-10 appearance-none border rounded-xl w-full py-4 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline") %>
    </div>
    <div>
      <%= form.submit(t("common.update"), class: "w-full bg-indigo-500 hover:bg-indigo-700 text-white font-bold py-3 px-4 rounded-xl focus:outline-none focus:shadow-outline hover:cursor-pointer") %>
    </div>

    <%= render("auth/password_validation") %>
  <% end %>
</div>
