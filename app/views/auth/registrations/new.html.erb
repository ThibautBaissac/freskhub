<h1 class="mb-10">Sign up</h1>

<%= form_with(model: @user, url: auth_registration_path) do |form| %>
  <% if form.object.errors.any? %>
    <% form.object.errors.full_messages.each do |message| %>
      <div><%= message %></div>
    <% end %>
  <% end %>

  <div class="mb-4">
    <%= form.label :email, class: "block text-gray-700 text-sm font-bold mb-2", for: :email %>
    <%= form.email_field :email, class: "appearance-none border rounded-xl w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>
  <div class="mb-4">
    <%= form.label :password, class: "block text-gray-700 text-sm font-bold mb-2", for: :password  %>
    <%= form.password_field :password, class: "appearance-none border rounded-xl w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>
  <div class="mb-4">
    <%= form.label :password_confirmation, class: "block text-gray-700 text-sm font-bold mb-2", for: :password_confirmation  %>
    <%= form.password_field :password_confirmation, class: "appearance-none border rounded-xl w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="mb-4">
    <%= form.submit "Sign up", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-xl focus:outline-none focus:shadow-outline" %>
  </div>
<% end %>
