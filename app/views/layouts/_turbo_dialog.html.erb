<%= turbo_frame_tag :modal do %>
  <dialog data-controller="dialog" data-action="click->dialog#clickOutside"
          class="backdrop:bg-gray-400 backdrop:bg-opacity-60 z-10 rounded-2xl border w-full md:w-2/3 mt-24">
    <div>
      <div class="flex justify-between items-center mb-2 p-4 border-b">
        <h2 class="text-xl font-bold"><%= title %></h2>
        <button class="inline-flex items-center p-2 text-base leading-normal text-center align-middle bg-transparent border border-solid shadow-none cursor-pointer rounded-xl hover:bg-gray-100" data-action="dialog#close">
          <%= t("common.close") %>
          <%= render(Svg::CrossComponent.new) %>
        </button>
      </div>
      <div class="p-4">
        <%= yield %>
      </div>
    </div>
  </dialog>
<% end %>
