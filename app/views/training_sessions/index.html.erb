<h1 class="mb-10"><%= t("training_session.session_list") %></h1>

<%= turbo_frame_tag "training_sessions_list", data: {turbo_action: :advance} do %>
  <div class="flex items-center justify-center space-x-2 text-center mb-6">
    <%= link_to(t("training_session.all_sessions"), training_sessions_path, class: "px-3 py-1 border rounded-full #{'bg-indigo-300' if params[:role].nil?}") %>
    <%= link_to(t("training_session.role.as_facilitator"), training_sessions_path(role: "as_facilitator"), class: "px-3 py-1 border rounded-full #{'bg-indigo-300' if params[:role] == 'as_facilitator'}") %>
    <%= link_to(t("training_session.role.as_editor"), training_sessions_path(role: "as_editor"), class: "px-3 py-1 border rounded-full #{'bg-indigo-300' if params[:role] == 'as_editor'}") %>
    <%= link_to(t("training_session.role.as_participant"), training_sessions_path(role: "as_participant"), class: "px-3 py-1 border rounded-full #{'bg-indigo-300' if params[:role] == 'as_participant'}") %>
  </div>

  <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
    <% @decorated_training_sessions.each do |training_session| %>
      <%= render "training_session", training_session: %>
    <% end %>
  </div>
  <%= render PaginationComponent.new(pagy: @pagy) %>
<% end %>
